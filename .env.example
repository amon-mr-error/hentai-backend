# Server
PORT=5000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/hentai?appName=Cluster0

# JWT
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=7d

# Redis (Local Development)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# Redis Cloud (Production on Render)
# Sign up at redis.com/try-free, create an instance, and get the public endpoint
# REDIS_URL=redis://default:YOUR_PASSWORD@YOUR_REDIS_CLOUD_HOST:PORT

# Algorand
ALGORAND_TOKEN=your_algorand_api_token_here
ALGORAND_SERVER=https://testnet-api.algonode.cloud
ALGORAND_PORT=443
ALGORAND_INDEXER=https://testnet-idx.algonode.cloud

# Platform
PLATFORM_FEE_PERCENT=1
ESCROW_TIMEOUT_HOURS=72

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://hentai-frontend.vercel.app
